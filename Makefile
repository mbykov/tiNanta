TESTS = test/naman/*.js
#REPORTER = dot
REPORTER = spec
g = _

nama:
	@NODE_ENV=test ./node_modules/.bin/mocha \
		--require should \
		--reporter $(REPORTER) \
		--slow 500 \
		--grep $(g) \
		--timeout 3000 \
		$(TESTS) \
#		2> /dev/null

